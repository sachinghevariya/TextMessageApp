<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Messages" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeCloseButtonStyle">@style/AppActionModeCloseButton</item>
        <item name="actionOverflowButtonStyle">@style/AppActionOverflowButton</item>
        <item name="actionModeStyle">@style/AppActionMode</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.Material3.Dark</item>
        <item name="popupTheme">@style/ThemeOverlay.Material3.Dark</item>
        <item name="android:actionBarPopupTheme">@style/ThemeOverlay.Material3.Dark</item>
        <item name="android:popupTheme">@style/ThemeOverlay.Material3.Dark</item>
        <!--        <item name="bg">@color/bgDark</item>-->
        <!--        <item name="textColor">@color/textColorDark</item>-->
        <!--        <item name="gray">@color/grayDark</item>-->
        <!--        <item name="bgBtnColor">@color/bgBtnColorDark</item>-->
        <!--        <item name="bgDialog">@color/bgDialogDark</item>-->
        <!--        <item name="iconColor">@color/white</item>-->
        <item name="android:statusBarColor">@color/bg</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!--        <item name="ad_native_background">@color/ad_native_background</item>-->
        <!--        <item name="ad_native_content_text">@color/ad_native_content_text</item>-->
    </style>

    <style name="Theme.Messages" parent="Base.Theme.Messages" />

    <style name="Theme.CustomSplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/bg</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_new</item>
        <item name="windowSplashScreenAnimationDuration">3000</item>
        <item name="postSplashScreenTheme">@style/Theme.Messages</item>
    </style>

    <style name="CustomDatePickerDialogTheme" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:datePickerStyle">@android:style/Widget.Material.CalendarView</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:datePickerMode">calendar</item>
        <item name="android:headerBackground">@color/gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:weekNumberColor">@color/white</item>
        <item name="android:calendarTextColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:buttonBarButtonStyle">@style/actionButtonStyle</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="CustomTimePickerDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:timePickerStyle">@style/CustomTimePicker</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorHint">@color/textColorSub</item>
        <item name="android:timePickerMode">clock</item>
        <item name="android:headerBackground">@color/gray</item>
        <item name="android:numbersBackgroundColor">@color/gray</item>
        <item name="android:numbersTextColor">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
        <item name="android:numbersSelectorColor">@color/colorAccent</item>
        <item name="android:buttonBarButtonStyle">@style/actionButtonStyle</item>
    </style>

    <style name="CustomTimePicker" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:headerBackground">@color/timePickerHeader</item>
        <item name="android:numbersBackgroundColor">@color/gray</item>
        <item name="android:numbersTextColor">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
        <item name="android:numbersSelectorColor">@color/colorAccent</item>
        <item name="android:background">@color/gray</item>
        <item name="android:buttonBarButtonStyle">@style/actionButtonStyle</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomBottomSheetStylenew" parent="@style/Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:background">@color/gray</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="actionButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppActionMode" parent="Widget.Material3.ActionMode">
        <item name="background">@color/bg</item>
        <item name="titleTextStyle">@style/AppActionModeTitleStyle</item>
    </style>

    <style name="AppActionModeTitleStyle" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="AppActionModeCloseButton" parent="Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="AppActionOverflowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="SwitchCompatCustom" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorForeground">@color/black</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorSwitchThumbNormal">@color/black</item>
    </style>

</resources>